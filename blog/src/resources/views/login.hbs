<!-- Biểu mẫu Đăng nhập -->
<div class="modal__overlay">
    <!-- Biểu mẫu Đăng nhập -->
    <div class="grid">
        <div class="login">
            <div class="row no-gutters">
                <div class="col l-7">
                    <div class="message">
                        <h1>Chào mừng trở lại!</h1>
                        <p>Nhập thông tin cá nhân của bạn để sử dụng đầy đủ các tính năng của trang web</p>
                    </div>
                </div>
                <div class="col l-5">
                    <div class="log__form">
                        <div class="modal__login-header">
                            <h3 class="modal__auth-heading">ĐĂNG NHẬP</h3>
                            <div class="modal__login-qr-form">
                                <div class="modal__login-qr">
                                    <p class="modal__login-qr-heading">Đăng nhập bằng mã QR</p>
                                </div>
                                <a href="javascript:void(0)" class="modal__login-qr-link">
                                    <img src="/img/qr_icon.png" alt="" class="modal__login-qr-img">
                                </a>
                            </div>
                        </div>
                        <form>
                            <div class="form-floating mb-4">
                                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                                <label for="floatingInput">Địa chỉ Email</label>
                            </div>
                            <div class="form-floating">
                                <input type="password" class="form-control" id="floatingPassword" placeholder="Mật khẩu">
                                <label for="floatingPassword">Mật khẩu</label>
                            </div>
                            <div class="option__log">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                    <label class="form-check-label" for="exampleCheck1">Ghi nhớ</label>
                                </div>
                                <a href="javascript:void(0)">Quên mật khẩu?</a>
                            </div>
                            <a href="/me" class="btn__log btn btn-primary">Đăng nhập</a>

                            <div class="modal__auth-or">_____________________HOẶC_____________________</div>
                            <div class="modal__auth-or-button">
                                <button class="modal__auth-or-but">
                                    <img src="/img/Facebook-Logo.png" alt="" class="modal__auth-or-but-img">
                                    <p class="modal__auth-or-but-text">Facebook</p>
                                </button>
                                <button class="modal__auth-or-but">
                                    <img src="/img/Google__G__Logo.svg.png" alt="" class="modal__auth-or-but-img">
                                    <p class="modal__auth-or-but-text">Google</p>
                                </button>
                            </div>
                            <div class="modal__login-footer">
                                <p class="modal__auth-footer-text">
                                    Bạn là người mới?
                                    <a id="link__reg" href="/signup" class="footer__link-reg modal__auth-footer-link">Đăng ký</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="/" class="modal__auth-close-reg">
        <i class="modal__auth-close-but fa-solid fa-left-long"></i>
    </a>
</div>
