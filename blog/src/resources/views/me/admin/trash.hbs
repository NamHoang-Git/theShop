                                    const productId = this.getAttribute('data-id'); // Lấy ID sản phẩm
                                    restoreStoredForm.action = `/me/admin/stored/restore/${productId}?_method=PATCH`;
                                    restoreStoredForm.submit();
                                });
                            });

                        {{!-- Shipping --}}
                        const deleteShippingModal = document.getElementById('deleteShippingModal');
                        const confirmShippingDeleteBtn = document.getElementById('confirmShippingDelete');
                        const deleteShippingForm = document.forms['deleteShippingForm'];
                        const restoreShippingForm = document.forms['restoreShippingForm'];
                            // Xử lý khi modal hiển thị (Shipping)
                            if (deleteShippingModal) {
                                deleteShippingModal.addEventListener('show.bs.modal', function (event) {
                                    const button = event.relatedTarget;
