                <form name="deleteStoredForm" method="POST"></form>
                <form name="deleteShippingForm" method="POST"></form>
                <form name="deleteBillForm" method="POST"></form>

                <form name="restoreDataForm" method="POST"></form>
                <form name="restoreStoredForm" method="POST"></form>
                <form name="restoreShippingForm" method="POST"></form>
                <form name="restoreBillForm" method="POST"></form>

                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        let productId;

                        {{!-- Detail Data --}}
                        const detailProductName = document.getElementById("detailProductName");
                        const detailProductPrice = document.getElementById("detailProductPrice");
                        const detailProductPriceOrigin = document.getElementById("detailProductPriceOrigin");
                        const detailProductDiscount = document.getElementById("detailProductDiscount");
                        const detailProductSold = document.getElementById("detailProductSold");
                        const detailProductStar = document.getElementById("detailProductStar");
                        const detailProductReviews = document.getElementById("detailProductReviews");
                        const detailProductStock = document.getElementById("detailProductStock");
                        const detailProductCreated = document.getElementById("detailProductCreated");

                            document.querySelectorAll(".open-detail-modal").forEach((button) => {
                                button.addEventListener("click", function () {
                                    // Gán dữ liệu vào modal
                                    detailProductName.textContent = this.getAttribute("data-bs-name");
                                    detailProductPrice.textContent = this.getAttribute("data-bs-price") + '₫';
                                    detailProductPriceOrigin.textContent = this.getAttribute("data-bs-price-origin")+ '₫';
                                    detailProductDiscount.textContent = this.getAttribute("data-bs-discount");
                                    detailProductSold.textContent = this.getAttribute("data-bs-sold");
                                    detailProductStar.textContent = this.getAttribute("data-bs-star");
                                    detailProductReviews.textContent = this.getAttribute("data-bs-reviews");
                                    detailProductStock.textContent = this.getAttribute("data-bs-stock");
                                    detailProductCreated.textContent = this.getAttribute("data-bs-created");
                                });
                            });

                        {{!-- Detail Stored --}}
                        const detailStoredName = document.getElementById("detailStoredName");
                        const detailStoredStock = document.getElementById("detailStoredStock");
                        const detailStoredInventory = document.getElementById("detailStoredInventory");
                        const detailStoredPriceOrigin = document.getElementById("detailStoredPriceOrigin");
                        const detailStoredCreated = document.getElementById("detailStoredCreated");

                            document.querySelectorAll(".open-detail-modal").forEach((button) => {
                                button.addEventListener("click", function () {
                                    // Gán dữ liệu vào modal
                                    detailStoredName.textContent = this.getAttribute("data-bs-name");
                                    detailStoredStock.textContent = this.getAttribute("data-bs-stock");
                                    detailStoredInventory.textContent = this.getAttribute("data-bs-inventory");
                                    detailStoredPriceOrigin.textContent = this.getAttribute("data-bs-priceOrigin") + '₫';
                                    detailStoredCreated.textContent = this.getAttribute("data-bs-created");
                                });
                            });

                        {{!-- Detail Shipping --}}
                        const detailShippingCode = document.getElementById("detailShippingCode");
                        const detailShippingName = document.getElementById("detailShippingName");
                        const detailShippingPhone = document.getElementById("detailShippingPhone");
                        const detailShippingLocation = document.getElementById("detailShippingLocation");
                        const detailShippingDate = document.getElementById("detailShippingDate");
                        const detailShippingTotalPrice = document.getElementById("detailShippingTotalPrice");
                        const detailShippingPaymentStatus = document.getElementById("detailShippingPaymentStatus");
                        const detailShippingShippingStatus = document.getElementById("detailShippingShippingStatus");
                        const detailShippingCreated = document.getElementById("detailShippingCreated");

                            document.querySelectorAll(".open-detail-modal").forEach((button) => {
                                button.addEventListener("click", function () {
                                    // Gán dữ liệu vào modal
                                    detailShippingCode.textContent = this.getAttribute("data-bs-code");
                                    detailShippingName.textContent = this.getAttribute("data-bs-name");
                                    detailShippingPhone.textContent = this.getAttribute("data-bs-phone");
                                    detailShippingLocation.textContent = this.getAttribute("data-bs-location");
                                    detailShippingDate.textContent = this.getAttribute("data-bs-date");
                                    detailShippingTotalPrice.textContent = this.getAttribute("data-bs-totalPrice") + '₫';
                                    detailShippingPaymentStatus.textContent = this.getAttribute("data-bs-paymentStatus");
                                    detailShippingShippingStatus.textContent = this.getAttribute("data-bs-shippingStatus");
                                    detailShippingCreated.textContent = this.getAttribute("data-bs-created");
                                });
                            });

                        {{!-- Detail Bill --}}
                        const detailBillCodeBill = document.getElementById("detailBillCodeBill");
                        const detailBillName = document.getElementById("detailBillName");
                        const detailBillPhone = document.getElementById("detailBillPhone");
                        const detailBillLocation = document.getElementById("detailBillLocation");
                        const detailBillDate = document.getElementById("detailBillDate");
                        const detailBillTotalPrice = document.getElementById("detailBillTotalPrice");
                        const detailBillPaymentStatus = document.getElementById("detailBillPaymentStatus");
                        const detailBillShippingStatus = document.getElementById("detailBillShippingStatus");
                        const detailBillCreated = document.getElementById("detailBillCreated");

                            document.querySelectorAll(".open-detail-modal").forEach((button) => {
                                button.addEventListener("click", function () {
                                    // Gán dữ liệu vào modal
                                    detailBillCodeBill.textContent = this.getAttribute("data-bs-codeBill");
                                    detailBillName.textContent = this.getAttribute("data-bs-name");
                                    detailBillPhone.textContent = this.getAttribute("data-bs-phone");
                                    detailBillLocation.textContent = this.getAttribute("data-bs-location");
                                    detailBillDate.textContent = this.getAttribute("data-bs-date");
                                    detailBillTotalPrice.textContent = this.getAttribute("data-bs-totalPrice") + '₫';
                                    detailBillPaymentStatus.textContent = this.getAttribute("data-bs-paymentStatus");
                                    detailBillShippingStatus.textContent = this.getAttribute("data-bs-shippingStatus");
                                    detailBillCreated.textContent = this.getAttribute("data-bs-created");
                                });
                            });

                        {{!-- Data --}}
                        const deleteDataModal = document.getElementById('deleteDataModal');
                        const confirmDataDeleteBtn = document.getElementById('confirmDataDelete');
                        const deleteDataForm = document.forms['deleteDataForm'];
                        const restoreDataForm = document.forms['restoreDataForm'];
                            // Xử lý khi modal hiển thị (Data)
                            if (deleteDataModal) {
                                deleteDataModal.addEventListener('show.bs.modal', function (event) {
                                    const button = event.relatedTarget;
                                    productId = button.getAttribute('data-bs-id'); // Lấy ID sản phẩm
                                });

                                // Khi nhấn nút "Xóa vĩnh viễn"
                                confirmDataDeleteBtn.addEventListener('click', function () {
                                    deleteDataForm.action = `/me/admin/force/${productId}?_method=DELETE`;
                                    deleteDataForm.submit();
                                });
                            }

                            // Xử lý nút khôi phục sản phẩm (Data)
                            document.querySelectorAll('.btn-data-restore').forEach(button => {
                                button.addEventListener('click', function (event) {
                                    event.preventDefault(); // Ngăn trang reload

                                    const productId = this.getAttribute('data-id'); // Lấy ID sản phẩm
                                    restoreDataForm.action = `/me/admin/restore/${productId}?_method=PATCH`;
                                    restoreDataForm.submit();
                                });
                            });

                        {{!-- Stored --}}
                        const deleteStoredModal = document.getElementById('deleteStoredModal');
                        const confirmStoredDeleteBtn = document.getElementById('confirmStoredDelete');
                        const deleteStoredForm = document.forms['deleteStoredForm'];
                        const restoreStoredForm = document.forms['restoreStoredForm'];
                            // Xử lý khi modal hiển thị (Stored)
                            if (deleteStoredModal) {
