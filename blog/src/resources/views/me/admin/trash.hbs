                                });

                                // Khi nhấn nút "Xóa vĩnh viễn"
                                confirmStoredDeleteBtn.addEventListener('click', function () {
                                    deleteStoredForm.action = `/me/admin/stored/force/${productId}?_method=DELETE`;
                                    deleteStoredForm.submit();
                                });
                            }

                            // Xử lý nút khôi phục sản phẩm Stored)
                                document.querySelectorAll('.btn-stored-restore').forEach(button => {
                                button.addEventListener('click', function (event) {
