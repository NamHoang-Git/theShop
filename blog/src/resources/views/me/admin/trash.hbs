                            <tr>
                                {{#if deletedCount}}
                                    <th scope="col">#</th>
                                    <th scope="col">Sản phẩm</th>
                                    <th scope="col">Đơn giá</th>
                                    <th scope="col">Thời gian tạo</th>
                                    <th scope="col"></th>
                                {{/if}}
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                            <tr>
                                <th scope="row">{{sum @index 1}}</th>
                                <td>{{this.name}}</td>
                                <td>{{formatCurrency this.price}}₫</td>
                                <td>{{this.createdAt}}</td>
                                <td class="detail__option">
                                    <button class="btn-list" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fa-solid fa-ellipsis"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="" class="btn btn-outline-success btn-data-restore" data-id="{{this._id}}">Khôi phục</a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-id="{{this._id}}" data-bs-target="#deleteDataModal">
                                                Xóa vĩnh viễn
                                            </button>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
