                                });

                                // Khi nhấn nút "Xóa vĩnh viễn"
                                confirmShippingDeleteBtn.addEventListener('click', function () {
                                    deleteShippingForm.action = `/me/admin/shipping/force/${productId}?_method=DELETE`;
                                    deleteShippingForm.submit();
                                });
                            }

                            // Xử lý nút khôi phục sản phẩm (Shipping)
                                document.querySelectorAll('.btn-shipping-restore').forEach(button => {
                                button.addEventListener('click', function (event) {
                                    event.preventDefault(); // Ngăn trang reload

                                    const productId = this.getAttribute('data-id'); // Lấy ID sản phẩm
                                    restoreShippingForm.action = `/me/admin/shipping/restore/${productId}?_method=PATCH`;
                                    restoreShippingForm.submit();
                                });
                            });

                        {{!-- Bill --}}
                        const deleteBillModal = document.getElementById('deleteBillModal');
                        const confirmBillDeleteBtn = document.getElementById('confirmBillDelete');
                        const deleteBillForm = document.forms['deleteBillForm'];
                        const restoreBillForm = document.forms['restoreBillForm'];
                            // Xử lý khi modal hiển thị (Bill)
                            if (deleteBillModal) {
                                deleteBillModal.addEventListener('show.bs.modal', function (event) {
                                    const button = event.relatedTarget;
                                    productId = button.getAttribute('data-bs-id'); // Lấy ID sản phẩm
                                });

                                // Khi nhấn nút "Xóa vĩnh viễn"
                                confirmBillDeleteBtn.addEventListener('click', function () {
                                    deleteBillForm.action = `/me/admin/bill/force/${productId}?_method=DELETE`;
                                    deleteBillForm.submit();
                                });
                            }

                            // Xử lý nút khôi phục sản phẩm (Bill)
                                document.querySelectorAll('.btn-bill-restore').forEach(button => {
                                button.addEventListener('click', function (event) {
                                    event.preventDefault(); // Ngăn trang reload

                                    const productId = this.getAttribute('data-id'); // Lấy ID sản phẩm
                                    restoreBillForm.action = `/me/admin/bill/restore/${productId}?_method=PATCH`;
                                    restoreBillForm.submit();
                                });
                            });
                    });
                </script>
            </div>
        </div>
    </div>
</div>

